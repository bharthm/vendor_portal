<mvc:View
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core"
    displayBlock="true"
    xmlns:l="sap.ui.layout"
    xmlns:t="sap.ui.table"
    controllerName="zmmsubcontract.controller.RegularASN"
>
    <Page
        id="myPageReg"
        showFooter="true"
        showHeader="false"
    >
	<content>
        <VBox>
            <HBox>
                <Image
                    src="/images/sfllogoonly.png"
                    alt="Company Logo"
                    densityAware="false"
                />
                <VBox>
                    <Title
                        text="Sundram Fasteners Limited"
                        width="380%"
                        textAlign="Center"
                        titleStyle="Auto"
                        class="sapUiTinyMarginBegin sapUiMediumMarginTop"
                    />

                    <Title
                        text="Regular ASN Creation"
                        width="380%"
                        textAlign="Center"
                        titleStyle="Auto"
                        class="sapUiTinyMarginBegin sapUiTinyMarginTop subTitle"
                    />
                </VBox>
            </HBox>
        </VBox>
        
            <Toolbar>
                <SearchField
                    id="idFilPlant1"
                    width="20%"
                    placeholder="Search Plant"
                    liveChange="onPlant"
                />

                <SearchField
                    id="idFilDA1"
                    width="20%"
                    placeholder="Search DA"
                    liveChange="onDA"
                />
                <SearchField
                    id="idFilVen1"
                    width="20%"
                    placeholder="Search Vendor"
                    liveChange="onVendor"
                />

                <SearchField
                    id="searchField1"
                    width="20%"
                    placeholder="Search Material"
                    liveChange="onMat"
                />
                <ToolbarSpacer />
                <Button
                    text="Create ASN"
                    press="onCreateASN"
                    type="Critical"
                    class="pulsatingButton"
                />
            </Toolbar>
        
            <ScrollContainer
                width="100%"
                height="400px"
                horizontal="true"
                vertical="true"
            >
        
            <Table
                id="idRegASN"
                items="{default>/}"
                growing="true"
                growingThreshold="20"
                mode="MultiSelect"
                selectionChange="captureRecordEH"
                includeItemInSelection="true"
                fixedLayout="false"
                class="myTableWithBackground"
                width="auto"
            >
                <columns>
                    <Column>
                        <Label text="DA Number" />
                    </Column>
                    <Column>
                        <Label
                            text="DA Date"
                            visible="false"
                        />
                    </Column>
                    <Column>
                        <Label text="Plant" />
                    </Column>
                    <Column>
                        <Label text="Vendor" />
                    </Column>
                    <Column>
                        <Label text="Output Part Number" />
                    </Column>
                    <Column>
                        <Label text="Input Part Number" />
                    </Column>
                    <Column>
                        <Label text="PO Number" />
                    </Column>
                    <Column>
                        <Label text="Unit of Measure" />
                    </Column>
                    <Column>
                        <Label text="Balance Quanity" />
                    </Column>
                    <Column>
                        <Label text="Preview PDF" />
                    </Column>
                    <Column>
                        <Label
                            text="Invoice Number"
                            visible="false"
                        />
                    </Column>
                    <Column>
                        <Label
                            text="Invoice Item"
                            visible="false"
                        />
                    </Column>
                    <!-- <Column>
									<Label text="Order Price Unit(Purchasing)"/>
								</Column>
								<Column>
									<Label text="PO Number"/>
								</Column>
								<Column>
									<Label text="PO Item"/>
								</Column>																								                      -->
                </columns>
                <items>
                    <ColumnListItem id="idRegTemp">
                        <cells>
                            <Text
                                text="{default>Exnum}"
                                class="boldtext"
                            />
                            <Text
                                text="{default>Exdat}"
                                visible="false"
                            />
                            <Text text="{default>Werks}" />
                            <Text text="{default>Lifnr}" />
                            <VBox>
                                <Text
                                    text="{default>Op_matnr}"
                                    class="boldtext"
                                />
                                <Text
                                    text="{default>Maktx}"
                                    class="smallfont"
                                />
                            </VBox>
                            <Text text="{default>Ip_Matnr}" />
                            <VBox>
                                <Text
                                    text="{default>Ebeln}"
                                    class="boldtext"
                                />
                                <Text
                                    text="{default>Ebelp}"
                                    class="smallfont"
                                />
                            </VBox>

                            <Button text="{default>Meins}" />
                            <Text text="{default>Balqty}" />
                            <Button
                                text="Preview PDF"
                                press="onPreviewPDF"
                            />
                            <!-- <Text text="{bprme}" />   -->
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
            </ScrollContainer>
        </content>
    </Page>
</mvc:View>
