<mvc:View
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core"
    displayBlock="true"
    xmlns:l="sap.ui.layout"
    xmlns:t="sap.ui.table"
    controllerName="zmmsubcontract.controller.subconDA"
>
    <Page
        id="mySubconDA"
        showFooter="true"
        showHeader="false"
    >
        <content>
            <HBox>
                <Image
                    src="/images/sfllogoonly.png"
                    alt="Company Logo"
                    densityAware="false"
                />
                <VBox>
                    <Title
                        text="Sundram Fasteners Limited"
                        width="380%"
                        textAlign="Center"
                        titleStyle="Auto"
                        class="sapUiTinyMarginBegin sapUiMediumMarginTop"
                    />

                    <Title
                        text="Subcontract DA Report"
                        width="380%"
                        textAlign="Center"
                        titleStyle="Auto"
                        class="sapUiTinyMarginBegin sapUiTinyMarginTop subTitle"
                    />
                </VBox>
            </HBox>
            <Toolbar>
                <SearchField
                    id="idFilPlant"
                    width="20%"
                    placeholder="Search Plant"
                    liveChange="onPlant"
                />

                <SearchField
                    id="idFilDA"
                    width="20%"
                    placeholder="Search DA"
                    liveChange="onDA"
                />
                <SearchField
                    id="idFilVen"
                    width="20%"
                    placeholder="Search Vendor"
                    liveChange="onVendor"
                />

                <SearchField
                    id="searchField"
                    width="20%"
                    placeholder="Search Material"
                    liveChange="onMat"
                />
            </Toolbar>

            <ScrollContainer
                width="auto"
                height="400px"
                horizontal="true"
                vertical="true"
            >

            <Table
                id="idDetail"
                items="{default>/}"
                growing="true"
                growingThreshold="20"
                fixedLayout="false"
                sticky="ColumnHeaders"
                width="auto"
            >
                <columns>
                    <Column>
                        <Label text="DA Number" />
                    </Column>
                    <Column>
                        <Label
                            text="DA Date"
                            visible="false"
                        />
                    </Column>
                    <Column>
                        <Label text="Plant" />
                    </Column>
                    <Column>
                        <Label text="Vendor" />
                    </Column>
                    <Column>
                        <Label text="Output Part Number" />
                    </Column>
                    <Column>
                        <Label text="Input Part Number" />
                    </Column>
                    <Column>
                        <Label text="PO Number" />
                    </Column>
                    <!-- <Column>
                        <Label text="Unit of Measure" />
                    </Column> -->
                    <Column>
                        <Label text="Balance Quanity" />
                    </Column>
                    <Column>
                        <Label text="Preview PDF" />
                    </Column>
                </columns>

                <items>
                    <ColumnListItem>
                        <cells>
                            <Text
                                text="{default>Exnum}"
                                class="boldtext"
                            />
                            <Text
                                text="{default>Exdat}"
                                visible="false"
                            />
                            <Text text="{default>Werks}" />
                            <Text text="{default>Lifnr}" />
                            <VBox>
                                <Text
                                    text="{default>Op_matnr}"
                                    class="boldtext"
                                />
                                <Text
                                    text="{default>Maktx}"
                                    class="smallfont"
                                />
                            </VBox>
                            <Text text="{default>Ip_Matnr}" />
                            <!-- <VBox>
                                <Text
                                    text="{default>Ebeln}"
                                    class="boldtext"
                                />
                                <Text
                                    text="{default>Ebelp}"
                                     
                                />
                            </VBox> -->

                            <ObjectIdentifier
                                title="{default>Ebeln}"
                                text="{default>Ebelp}"
                                class="smallfont"
                            />

                            <!-- <Button text="{default>Meins}" /> -->
                            <!-- <Text text="{default>Balqty}" /> -->
                            <ObjectNumber
                                number="{default>Balqty}"
                                unit="{default>Meins}"
                            />

                            <Button
                                text="Preview PDF"
                                press="onPreviewPDF"
                            />
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
            </ScrollContainer>            
        </content>
    </Page>
</mvc:View>
